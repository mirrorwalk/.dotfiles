// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",
    "height": 35,
    "spacing": 8,
    "margin-top": 5,
    "margin-left": 10,
    "margin-right": 10,

    "font-family": "JetBrainsMono Nerd Font Mono",
    
    // Cyberpunk module layout
    "modules-left": [
        //"hyprland/workspaces",
        //"hyprland/submap",
        //"hyprland/window"
        "niri/workspaces",
        "custom/separator",
        // "niri/window"
        "custom/niri-window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cpu",
        "load",
        "memory",
        "network",
        "custom/separator",
        "pulseaudio",
        "custom/separator", 
        "custom/weather",
        "custom/separator", 
        "tray"

    ],

    "niri/window": {
        "format": "{}",
        "max-length": 40
    },

    "custom/niri-window": {
        "exec": "~/.config/waybar/scripts/niri-window.sh",
        "return-type": "json",
        "tooltip": true,
        "format": "{}"
    },


    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "Û∞é§",
            "2": "Û∞éß", 
            "3": "Û∞é™",
            "4": "Û∞é≠",
            "5": "Û∞é±",
            "6": "Û∞é≥",
            "7": "Û∞é∂",
            "8": "Û∞éπ",
            "9": "Û∞éº",
            "10": "Û∞é°"
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "on-click": "activate"
    },

    "hyprland/window": {
        "format": "{}",
        "max-length": 40,
        "separate-outputs": true,
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "üåê $1",
            "(.*) - Discord": "üí¨ $1", 
            "(.*) - VSCode": "üíª $1",
            "kitty": "‚ö° Terminal"
        }
    },

    "hyprland/submap": {
        "format": "‚ú® {}",
        "max-length": 8,
        "tooltip": false
    },

    // System monitoring with cyberpunk flair
    "cpu": {
        "format": "Û∞ª† {usage}%",
        "tooltip": true,
        "interval": 2,
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "memory": {
        "format": "Û∞çõ {percentage}%", 
        "tooltip-format": "RAM: {used:0.1f}G/{total:0.1f}G\nSwap: {swapUsed}G/{swapTotal}G",
        "interval": 5,
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "network": {
	"interface": "enp42s0",
    "interval": 2,
	"format-disconnected": "‚ùå Disconnected",
	"format-ethernet": "üî∫{bandwidthUpBytes} üîª{bandwidthDownBytes}",
	"tooltip-format": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "Û∞ÇØ {volume}%",
        "format-muted": "Û∞ñÅ",
        "format-icons": {
            "headphone": "Û∞ãã",
            "hands-free": "Û∞ãé", 
            "headset": "Û∞ãé",
            "phone": "Û∞Ñú",
            "portable": "Û∞¶ß",
            "car": "Û∞Ñã",
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },

    "clock": {
        "format": "Û∞•î {:%H:%M Û∞∏ó %Y-%m-%d} ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#00ffdd'><b>{}</b></span>",
                "days": "<span color='#ffffff'><b>{}</b></span>",
                "weeks": "<span color='#ff0080'><b>W{}</b></span>",
                "weekdays": "<span color='#ffff00'><b>{}</b></span>",
                "today": "<span color='#ff0080'><b><u>{}</u></b></span>"
            }
        }
    },
    // Custom modules for cyberpunk aesthetic
    "custom/separator": {
        "format": "‚îÇ",
        "tooltip": false
    },
    "custom/weather": {
        "exec": "curl -s 'wttr.in/Prague?format=1' | head -c 15",
        "format": "{}",
        "interval": 3600,
        "tooltip": false
    },
    "load": {
	"format": "{}",
	"interval": 1
    }
}
